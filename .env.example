# Environment variables for News Agent
# Copy this file to .env and fill in your actual values

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LangSmith (for monitoring and debugging)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=news-agent

# Vector Database - Pinecone
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=news_agent
POSTGRES_USER=news_agent_user
POSTGRES_PASSWORD=your_postgres_password

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# InfluxDB for time series data
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=news_agent_org
INFLUXDB_BUCKET=news_agent_metrics

# Social Media APIs
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false
MAX_CONCURRENT_REQUESTS=10
API_RATE_LIMIT=100

# Content Processing
MAX_SUMMARY_LENGTH=500
MIN_CONTENT_QUALITY_SCORE=0.7
DEFAULT_LANGUAGE=zh-cn
